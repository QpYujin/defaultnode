                         #custom-step-1.tab-pane
                           .col-md-12
                             .content-box
                               .content-box-wrapper
                                 section
                                   article.articles
                                     article
                                       .example-box-wrapper
                                         content-box-header.bg-default
                                         //| Existing Source Control configuration :
                                         //|
                                         //| There is no configuration for source control. Please add configuration.
                                         md-table-container.scrollable.grids-table(layout, flex, ng-show="global.repos.length")
                                           table(md-table, flex)
                                             thead(md-head, md-order="query.order")
                                               tr(md-row)
                                                 th(md-column)
                                                   strong Name
                                                 th(md-column)
                                                   strong Provider
                                                 th(md-column)
                                                   strong Url
                                                 th(md-column)
                                                   strong Type
                                                   th(md-column)
                                             tbody(md-body)
                                               tr(md-row, ng-repeat="repo in global.repos")
                                                 td(md-cell) {{repo.name}}
                                                 td(md-cell) {{repo.provider}}
                                                 td(md-cell) {{repo.url}}
                                                 td(md-cell) {{repo.type}}
                                                 td(md-cell)
                                                   md-button.md-icon-button(ui-sref=".repo({repoId: repo.uuid})")
                                                     i.fa.fa-cog
                                                   //md-button.md-icon-button
                                                     //i.fa.fa-remove
                                              br
                                         button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-repo", ui-sref-active="hidden") Add New Configuration
                                         strong(ng-show="!global.repos.length") There is no repository configured. Please add configuration 
                                           br
                                           button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-repo", ui-sref-active="hidden") Add Configuration


                         #custom-step-2.tab-pane
                           .col-md-12
                             .content-box
                               .content-box-wrapper
                                 section
                                   article.articles
                                     article
                                       .example-box-wrapper
                                         h3.content-box-header.bg-default
                                         //collapse-box(title="Source code Management", buttons="managementButtons")
                                         //| Existing Cloud Provider Configuration
                                         //| There is no configuration for Cloud Provider. Please add cloud provider configuration.
                                         md-table-container.scrollable.grids-table(layout, flex, ng-show="global.clouds.length")
                                           table(md-table, flex)
                                             thead(md-head, md-order="query.order")
                                               tr(md-row)
                                                 th(md-column)
                                                   strong Name
                                                 th(md-column)
                                                   strong Provider
                                                 th(md-column)
                                             tbody(md-body)
                                               tr(md-row, ng-repeat="cloud in global.clouds")
                                                 td(md-cell) {{cloud.name}}
                                                 td(md-cell) {{cloud.provider}}
                                                 td(md-cell)
                                                   md-button.md-icon-button(ui-sref=".cloud({cloudId: cloud.uuid})")
                                                     i.fa.fa-cog
                                              br
                                            button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-repo", ui-sref-active="hidden") Add New Configuration
                                         strong(ng-show="!global.clouds.length") There is no cloud provider.Please add configuration
                                            br
                                            button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-cloud", ui-sref-active="hidden") Add Configuration


                         #custom-step-3.tab-pane
                           .col-md-12
                             .content-box
                               .content-box-wrapper
                                 section
                                   article.articles
                                     article
                                       .example-box-wrapper
                                         h3.content-box-header.bg-default
                                         //| Image Repositories
                                         //| There is no configuration for Image repositories. Please add configuration.
                                         md-table-container.scrollable.grids-table(layout, flex, ng-show="global.images.length")
                                           table(md-table, flex)
                                             thead(md-head, md-order="query.order")
                                               tr(md-row)
                                                 th(md-column)
                                                   strong Name
                                                 th(md-column)
                                                   strong Provideri
                                                 th(md-column)
                                                   strong Url
                                                 th(md-column)
                                                   strong Type
                                                 th(md-column)
                                             tbody(md-body)
                                               tr(md-row, ng-repeat="image in global.images")
                                                 td(md-cell) {{image.name}}
                                                 td(md-cell) {{image.provider}}
                                                 td(md-cell) {{image.url}}
                                                 td(md-cell) {{image.type}}
                                                 td(md-cell)
                                                   md-button.md-icon-button(ui-sref=".image({imageId: image.uuid})")
                                                     i.fa.fa-cog
                                               br
                                         button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-repo", ui-sref-active="hidden") Add New Configuration
                                         strong(ng-show="!global.images.length") There is no image repository configured. Please add configuration.
                                            br
                                            button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-image", ui-sref-active="hidden") Add configuration




                         #custom-step-4.tab-pane
