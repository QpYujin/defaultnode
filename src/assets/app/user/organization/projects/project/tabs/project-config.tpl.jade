                                                 td(md-cell) {{.provider}}
                                                 td(md-cell) {{.url}}
                                                 td(md-cell) {{.type}}
                                                 td(md-cell)
                                                   md-button.md-icon-button(ui-sref=".image({imageId: image.uuid})")
                                                     i.fa.fa-cog
                                               br
                                         button.btn.btn-sm.btn-primary(ui-sref="user.organization.projects.project.config.new-cicd", ui-sref-active="hidden") Add New Configuration
